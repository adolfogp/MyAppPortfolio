<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="OrangeButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="colorButtonNormal">@color/button_orange</item>
    </style>

    <style name="RedButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="colorButtonNormal">@color/button_red</item>
        <item name="android:textColor">@color/button_white_text</item>
    </style>

</resources>
